.SUFFIXES:	.F .f .o .f90 .c

.F.f:
	$(CPP) $(CPPFLAGS) $< > $*.f

$(TARGET):	$(OBJST) $(OBJXML) $(OBJS)
	$(AR) $(ARFLAGS) $@ $(OBJST) $(OBJXML) $(OBJS) $(LIBS)
	mv *.mod $(INCMOD)

.f.o:
	$(FC) $(FFLAGS) -c $<

.f90.o:
	$(FC) $(FFLAGS) -c $<

.c.o :
	${CC} ${CFLAGS} -c $<

clean:	
	/bin/rm -rf  libncep_post_*.a *.lst *.o include
#
postcntrl_t.o      :       postcntrl_t.f90
	$(FC) $(FFLAGS) postcntrl_t.f90


