#
# CPP, Compiler, and Linker Options
#

#FC       = mpfort -compiler ifort
#CPP      = /lib/cpp -P
FC = $(myFC) $(myFCFLAGS)
CPP = $(myCPP) $(myCPPFLAGS)
ARCH     = auto
CPPFLAGS = -DLINUX
OPTS     = -O -fp-model strict
LIST     = 
FREE     = -FR
#TRAPS    = -qflttrap=ov:und:zero:inv:inex -qcheck -qinitauto=FF
TRAPS    = 
